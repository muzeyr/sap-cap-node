COLUMN TABLE sap_common_Languages (
  name NVARCHAR(255),
  descr NVARCHAR(1000),
  code NVARCHAR(14) NOT NULL,
  PRIMARY KEY(code)
) WITH ASSOCIATIONS (
  MANY TO MANY JOIN sap_common_Languages_texts AS texts ON (texts.code = code),
  MANY TO ONE JOIN sap_common_Languages_texts AS localized ON (localized.code = code AND localized.locale = SESSION_CONTEXT('LOCALE'))
)